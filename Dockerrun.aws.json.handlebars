{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    },
    {
      "name": "proc",
      "host": {
        "sourcePath": "/proc/"
      }
    },
    {
      "name": "cgroup",
      "host": {
        "sourcePath": "/cgroup/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "shush",
      "image": "articulate/shush:{{REF}}",
      "essential": true,
      "memory": 786,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "logConfiguration": {
        "logDriver": "syslog",
        "options": {
          "tag": "shush-rack"
        }
      }
    },
    {
      "name": "nginx_redirect",
      "image": "articulate/http-to-https:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "datadog",
      "image": "articulate/articulate-dd-agent:latest",
      "memory": 256,
      "privileged": true,
      "essential": false,
      "environment": [
        {
          "name": "EC2_TAGS",
          "value": "yes"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "sock",
          "containerPath": "/var/run/docker.sock"
        },
        {
          "sourceVolume": "proc",
          "containerPath": "/host/proc",
          "readOnly": "true"
        },
        {
          "sourceVolume": "cgroup",
          "containerPath": "/host/sys/fs/cgroup",
          "readOnly": "true"
        }
      ]
    }
  ],
  "authentication": {
    "bucket": "config-bucket-{{ACCOUNT_ID}}",
    "key": "docker/dockercfg.json"
  }
}
